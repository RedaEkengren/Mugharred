# Security Configuration
NODE_ENV=development
PORT=3001

# Session Security (CHANGE THESE IN PRODUCTION!)
SESSION_SECRET=change-this-to-a-random-64-character-string-in-production
JWT_SECRET=change-this-to-another-random-64-character-string-in-production

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Rate Limiting
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Application Limits
MAX_ONLINE_USERS=5
MAX_MESSAGE_LENGTH=500
MAX_USERNAME_LENGTH=50
MIN_USERNAME_LENGTH=2
INACTIVITY_TIMEOUT_MS=300000

# Logging
LOG_LEVEL=info